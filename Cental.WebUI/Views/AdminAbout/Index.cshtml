@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
}

<h1>About</h1>
<table class="table table-bordered">
    <tr>
        <th></th>
        <th>Vision</th>
        <th>Mission</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Vision</td>
            <td>@item.Mission</td>
            <td><a asp-action="DeleteAbout" asp-route-id="@item.AboutID" class="btn btn-danger">Delete</a></td>
            <td><a asp-action="UpdateAbout" asp-route-id="@item.AboutID" class="btn btn-info">Update</a></td>
        </tr>
    }
</table>

<a asp-action="CreateAbout" asp-controller="AdminAbout" class="btn btn-outline-primary">Add New About Section</a>