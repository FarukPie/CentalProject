
@model List<About>
@{
    ViewData["Title"] = "Index";
}

<h1>About</h1>
<table class="table table-bordered">
    <tr>
        <th></th>
        <th>Vision</th>
        <th>Mission</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Vision</td>
            <td>@item.Mission</td>
            <td><a href="#" class="btn btn-danger">Delete</a></td>
            <td><a href="#" class="btn btn-info">Update</a></td>
        </tr>
    }
</table>

<a href="#" class="btn btn-primary">Add New About Section</a>