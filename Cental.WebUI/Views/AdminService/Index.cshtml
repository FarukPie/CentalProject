@using Cental.DTOLayer.ServiceDtos
@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
@{
    int count = 0;
}
<h1>Service</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Icon</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>

            <td><a asp-action="DeleteService" asp-route-id="@item.ServiceID" class="btn btn-danger">Delete</a></td>
            <td><a asp-action="UpdateService" asp-route-id="@item.ServiceID" class="btn btn-info">Update</a></td>
        </tr>
    }
</table>

<a asp-action="CreateService" asp-controller="AdminService" class="btn btn-outline-primary">Add New Service</a>



