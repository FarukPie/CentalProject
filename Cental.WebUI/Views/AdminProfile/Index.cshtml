@using Cental.DTOLayer.UserDtos
@model ProfileEditDto
@{
    ViewData["Title"] = "Updute Profile Info";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<form method="post" enctype="multipart/form-data">
    <div class="text-center">
        <img src="@Model.ImageUrl" style="width:100px;height:100px" alt="Profile Picture" />
        <input type="file" asp-for="ImageFile" accept="image/png, image/jpg, image/jpeg" />
    </div>

    <input type="hidden" asp-for="ImageUrl" />
    <label>Ad</label>
    <input type="text" asp-for="FirstName" class="form-control"   required />
    <br />
    <label>Soyad</label>
    <input type="text" asp-for="LastName" class="form-control" required />
    <br />
    <label>Email</label>
    <input type="text" asp-for="Email" class="form-control" required />
    <br />
    <label>Phone Number</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" required />
    <br />
    <label>Enter youre password for update</label>
    <input  type="password" asp-for="CurrentPassword" class="form-control" required />
    <p class="text-danger">
        @Html.ValidationSummary()
    </p>
    <button class="btn btn-outline-dark">Update Information</button>
</form>

