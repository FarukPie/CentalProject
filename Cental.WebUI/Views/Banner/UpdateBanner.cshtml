@model ResultBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>UpdateBanner</h1>
<form method="post">
    <input type="hidden" asp-for="BannerID" />
    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Image Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
   
    <button class="brn btn-outline-primary">Update</button>

</form>

