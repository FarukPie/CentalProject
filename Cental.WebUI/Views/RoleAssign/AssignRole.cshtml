@using Cental.DTOLayer.UserDtos
@model List<AssignRoleDto>
@{
    ViewData["Title"] = "Assign Role";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
<h3>Assign a role to user @ViewBag.FullName </h3>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].RoleName" />
        <input type="hidden" asp-for="@Model[i].RoleId" />

        <div class="form-check">
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
            
        </div>
    }

    <button class="btn btn-outline-dark">Assign Roles</button>
</form>